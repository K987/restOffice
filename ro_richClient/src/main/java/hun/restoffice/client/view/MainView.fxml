         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </ButtonBar>
   </bottom>
   <center>
      <Pane />
   </center>
   <left>
      <VBox fx:id="advanceIndicator" maxWidth="100.0" prefHeight="200.0" BorderPane.alignment="CENTER">
