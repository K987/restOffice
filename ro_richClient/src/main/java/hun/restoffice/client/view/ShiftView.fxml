<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <TableView fx:id="employees" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="nameCol" editable="false" prefWidth="150.0" text="Név" />
          <TableColumn fx:id="defaultPositionCol" editable="false" prefWidth="150.0" text="Munkakör" />
            <TableColumn fx:id="defaultStartCol" prefWidth="150.0" text="Műszak kezdés" />
        </columns>
      </TableView>
   </left>
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Műszak kezdés ideje:" textAlignment="CENTER" wrapText="true" GridPane.halignment="LEFT" />
            <Label text="Műszak befejezés ideje:" textAlignment="CENTER" wrapText="true" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
            <Label text="Műszak beosztás:" textAlignment="CENTER" wrapText="true" GridPane.halignment="LEFT" GridPane.rowIndex="2" />
            <TextField fx:id="actualStartField" editable="true" maxWidth="75.0" prefWidth="75.0" GridPane.columnIndex="1" />
            <TextField fx:id="actualEndField" editable="true" maxWidth="75.0" prefWidth="75.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ComboBox fx:id="actualPosCombo" maxWidth="100.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </GridPane>
   </center>
   <bottom>
      <ButtonBar disable="true" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button mnemonicParsing="false" text="Töröl" />
            <Button mnemonicParsing="false" text="Hozzáad" />
        </buttons>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
